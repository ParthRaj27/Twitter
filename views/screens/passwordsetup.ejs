<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="/assets/css/paswordsetup.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>password set-up</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="wrapper">
      <h2>set password</h2>
      <form id="passwordform">
        <div class="input-box">
          <input
            type="password"
            name="password"
            placeholder="Enter password"
            required
          />
        </div>
        <div class="input-box">
          <input
            type="password"
            name="cpassword"
            placeholder="confirm password"
            required
          />
        </div>
        <div class="input-box button">
          <input type="Submit" value="Register Now" />
        </div>
        <div class="text">
          <h3>already have an account? <a href="/login">login</a></h3>
        </div>
      </form>
    </div>
  </body>
  <script src="/assets/script/passwordsetup.script.js"></script>
</html>
